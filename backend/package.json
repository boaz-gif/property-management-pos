{
  "name": "property-management-backend",
  "version": "1.0.0",
  "description": "Backend for Property Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage-gate": "jest --coverage && node ../scripts/coverage-gate.js --coverage-dir coverage",
    "db:introspect": "node scripts/phase1_db_introspection.js",
    "db:migrate:up": "node scripts/run_sql_migration.js up",
    "db:migrate:down": "node scripts/run_sql_migration.js down"
  },
  "keywords": [
    "property",
    "management",
    "rental",
    "api"
  ],
  "author": "Boaz Kiriama",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.3",
    "uuid": "^9.0.1",
    "xss": "^1.0.15",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
